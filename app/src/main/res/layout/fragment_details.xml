<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_details_idText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id: "
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="130dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/fragment_details_episodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Episode: "
        app:layout_constraintTop_toBottomOf="@+id/fragment_details_idText"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="130dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/fragment_details_timestampText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timestamp: "
        app:layout_constraintTop_toBottomOf="@+id/fragment_details_episodeText"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="130dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:contentDescription="Large image"
        android:id="@+id/fragment_details_largeImage"
        android:layout_width="375dp"
        android:layout_height="373dp"
        app:srcCompat="@color/blue"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintVertical_bias="0.747"/>

</android.support.constraint.ConstraintLayout>